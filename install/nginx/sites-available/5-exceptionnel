server {
	listen 80;
	server_name exceptionnel.repanier.be;

	access_log /var/log/nginx/5-exceptionnel_access.log;
	error_log /var/log/nginx/5-exceptionnel_error.log;
	client_max_body_size 3M;
	location /media/ {
		alias /home/repad/v1/exceptionnel/exceptionnel/media/public/;
	}
	location /static/ {
		expires 7d;
		alias /home/repad/v1/exceptionnel/exceptionnel/collect-static/;
	}	
	location /favicon.ico {
		expires 30d;
		alias /home/repad/v1/exceptionnel/exceptionnel/media/favicon.ico;
	}
	location /robots.txt {
		expires 30d;
		alias /home/repad/v1/exceptionnel/exceptionnel/media/robots.txt;
	}
	location /fr/repanier/order/ {
		expires 72h;
		include     uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass  unix:///tmp/exceptionnel.sock;
	}
	location / {
		include		uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass 	unix:///tmp/exceptionnel.sock;
		uwsgi_read_timeout 600s;
		uwsgi_send_timeout 60s;
		uwsgi_connect_timeout 60s;
	}
}
