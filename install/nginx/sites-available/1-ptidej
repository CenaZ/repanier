server {
	listen 80;
	server_name ptidej.repanier.be;

	access_log /var/log/nginx/1-ptidej_access.log;
	error_log /var/log/nginx/1-ptidej_error.log;
	client_max_body_size 3M;
	location /media/ {
		alias /home/repad/v1/ptidej/ptidej/media/public/;
	}
	location /static/ {
		expires 7d;
		alias /home/repad/v1/ptidej/ptidej/collect-static/;
	}	
	location /favicon.ico {
		expires 30d;
		alias /home/repad/v1/ptidej/ptidej/media/favicon.ico;
	}
	location /robots.txt {
		expires 30d;
		alias /home/repad/v1/ptidej/ptidej/media/robots.txt;
	}
	location /order/ {
		expires 72h;
	}
        location /fr/repanier/order/ {
                expires 72h;
                include         uwsgi_params;
                uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;         
                uwsgi_pass      unix:///tmp/ptidej.sock;
        }
	location / {
		include		uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass 	unix:///tmp/ptidej.sock;
		uwsgi_read_timeout 600s;
		uwsgi_send_timeout 60s;
		uwsgi_connect_timeout 60s;
	}
}
server { 
        listen 80;            
        server_name ptidej.gasath.be;

        location / {
                rewrite ^(.*)$ http://ptidej.repanier.be$1 permanent;
        }
}

