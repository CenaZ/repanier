server {
	listen 80;
	server_name order.bees-coop.be;

	access_log /var/log/nginx/6-bees_access.log;
	error_log /var/log/nginx/6-bees_error.log;
	client_max_body_size 3M;
	location /media/ {
		alias /home/repad/v1/bees/bees/media/public/;
	}
	location /static/ {
		expires 7d;
		alias /home/repad/v1/bees/bees/collect-static/;
	}	
	location /favicon.ico {
		expires 30d;
		alias /home/repad/v1/bees/bees/media/favicon.ico;
	}
	location /robots.txt {
		expires 30d;
		alias /home/repad/v1/bees/bees/media/robots.txt;
	}
	location /fr/repanier/order/ {
		expires 72h;
		include     uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass  unix:///tmp/bees.sock;
	}
	location /nl/repanier/order/ {
		expires 72h;
		include     uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass  unix:///tmp/bees.sock;
	}
	location / {
		include		uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass 	unix:///tmp/bees.sock;
		uwsgi_read_timeout 600s;
		uwsgi_send_timeout 60s;
		uwsgi_connect_timeout 60s;
	}
}

server { 
        listen 80;            
        server_name bees.repanier.be;

        location / {
                rewrite ^(.*)$ http://order.bees-coop.be$1 permanent;
        }
}

server {
        listen 80;
        server_name bees-coop.repanier.be;

        location / {
                rewrite ^(.*)$ http://order.bees-coop.be$1 permanent;
        }
}

