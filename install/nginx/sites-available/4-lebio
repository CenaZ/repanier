server {
	listen 80;
	server_name lebiodici.be;

	access_log /var/log/nginx/4-lebio_access.log;
	error_log /var/log/nginx/4-lebio_error.log;
	client_max_body_size 3M;
	location /media/ {
		alias /home/repad/v1/lebio/lebio/media/public/;
	}
	location /static/ {
		expires 7d;
		alias /home/repad/v1/lebio/lebio/collect-static/;
	}	
	location /favicon.ico {
		expires 30d;
		alias /home/repad/v1/lebio/lebio/media/favicon.ico;
	}
	location /robots.txt {
		expires 30d;
		alias /home/repad/v1/lebio/lebio/media/robots.txt;
	}
        location /fr/repanier/order/ {
                expires 72h;
                include         uwsgi_params;
                uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;         
                uwsgi_pass      unix:///tmp/lebio.sock;
        }
	location / {
		include		uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass 	unix:///tmp/lebio.sock;
		uwsgi_read_timeout 600s;
		uwsgi_send_timeout 60s;
		uwsgi_connect_timeout 60s;
	}
}
server {
	listen 80;
	server_name le-bio-d-ici.be;

	location / {
		rewrite ^(.*)$ http://lebiodici.be$1 permanent;
	}
}

server {
        listen 80;
        server_name www.lebiodici.be;

        location / {
                rewrite ^(.*)$ http://lebiodici.be$1 permanent;
        }
}  
