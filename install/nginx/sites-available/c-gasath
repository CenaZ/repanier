server {
	listen 80;
	server_name www.gasath.be;

	access_log /var/log/nginx/c-gasath_access.log;
	error_log /var/log/nginx/c-gasath_error.log;
	client_max_body_size 3M;
	location /media/ {
		alias /home/repad/v1/gasath/gasath/media/public/;
	}
	location /static/ {
		alias /home/repad/v1/gasath/gasath/collect-static/;
	}	
	location /favicon.ico {
		alias /home/repad/v1/gasath/gasath/media/favicon.ico;
	}
	location /robots.txt {
		alias /home/repad/v1/gasath/gasath/media/robots.txt;
	}
	location / {
		include		uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass 	unix:///tmp/gasath.sock;
	}
}
