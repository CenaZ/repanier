server {
	listen 80;
	server_name epidici.be;

	access_log /var/log/nginx/b-lepi_access.log;
	error_log /var/log/nginx/b-lepi_error.log;
	client_max_body_size 3M;
	location /media/ {
		alias /home/repad/v1/lepi/lepi/media/public/;
	}
	location /static/ {
		alias /home/repad/v1/lepi/lepi/collect-static/;
	}	
	location /favicon.ico {
		alias /home/repad/v1/lepi/lepi/media/favicon.ico;
	}
	location /robots.txt {
		alias /home/repad/v1/lepi/lepi/media/robots.txt;
	}
	location / {
		include		uwsgi_params;
		uwsgi_param HTTP_X_FORWARDED_HOST $server_name:80;
		uwsgi_pass 	unix:///tmp/lepi.sock;
	}
}
server {
	listen 80;
	server_name lepidici.be;

	location / {
		rewrite ^(.*)$ http://epidici.be$1 permanent;
	}
}
server {
        listen 80;
        server_name www.epidici.be;

        location / {
                rewrite ^(.*)$ http://epidici.be$1 permanent;
        }
}
server {
        listen 80;
        server_name www.lepidici.be;

        location / {
                rewrite ^(.*)$ http://epidici.be$1 permanent;
        }
}
server {
	listen 80;
	server_name xn--pidici-9ua.be;

	location / {
		rewrite ^(.*)$ http://epidici.be$1 permanent;
	}
}
